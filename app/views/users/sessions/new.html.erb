<div class="max-w-2xl mx-auto mt-16 px-4">
  <h2 class="text-2xl text-stone-600 font-bold text-center mb-8">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <!-- メールアドレス -->
    <div class="mt-4">
      <%= f.label :email, "メールアドレス", class: "w-full md:w-2/3 lg:w-1/2 mx-auto flex text-sm font-medium text-gray-700" %>
      <%= f.email_field :email,
        autofocus: true,
        autocomplete: "email",
        placeholder: "letteo@example.co.jp",
        class: "mt-2 w-full md:w-2/3 lg:w-1/2 mx-auto flex justify-center bg-white border border-gray-300 rounded-md h-12 px-3 sm:text-sm placeholder-gray-400 focus:outline-none"
      %>
    </div>

    <!-- パスワード -->
    <div class="mt-4">
      <%= f.label :password, "パスワード", class: "w-full md:w-2/3 lg:w-1/2 mx-auto flex text-sm font-medium text-gray-700" %>
      <%= f.password_field :password,
        autocomplete: "current-password",
        placeholder: "password1",
        class: "mt-2 w-full md:w-2/3 lg:w-1/2 mx-auto flex justify-center bg-white border border-gray-300 rounded-md h-12 px-3 sm:text-sm placeholder-gray-400 focus:outline-none"
      %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mt-4 w-full md:w-2/3 lg:w-1/2 mx-auto flex items-center text-sm text-gray-700">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, "ログイン状態を保持する" %>
      </div>
    <% end %>

    <!-- ログインボタン -->
    <div class="mt-8">
      <%= f.submit "ログインする",
        class: "w-full md:w-2/3 lg:w-1/2 mx-auto flex justify-center h-12 px-4 rounded-md shadow-sm text-sm font-medium text-white bg-gray-800 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-800"
      %>
    </div>
  <% end %>

  <div class= "text-center mt-6">
    <%= link_to "新規登録はこちら", new_user_registration_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>