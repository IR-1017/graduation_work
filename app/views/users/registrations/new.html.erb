<div class="max-x-2xl mx-auto mt-16 px-4 ">
  <h2 class="text-2xl text-stone-600 font-bold text-center mb-8">新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

  <div class="mt-4">
    <%= f.label :email, "メールアドレス" , class: " w-full md:w-2/3 lg:w-1/2 mx-auto flex black text-sm font-medium text-gray-700"%>
    <%= f.email_field :email,placeholder: "letteo@example.co.jp",autofocus: true, autocomplete: "email",class: "mt-2 w-full md:w-2/3 lg:w-1/2 mx-auto flex justify-center bg-white border border-gray-300 rounded-md h-12 px-3 sm:text-sm placeholder-gray-400 focus:outline-none  " %>
  </div>

  <div class="mt-4">
    <%= f.label :password , class: " w-full md:w-2/3 lg:w-1/2 mx-auto flex block text-sm font-medium text-gray-700" %>
    <% if @minimum_password_length %>
      <p class=" w-full md:w-2/3 lg:w-1/2 mx-auto flex text-xs text-gray-400 mb-1">（<%= @minimum_password_length %> 文字以上・英字+数字・半角英数字のみ）</p>
    <% end %>
    <%= f.password_field :password,placeholder: "password1", autocomplete: "new-password", class: " mt-2 w-full md:w-2/3 lg:w-1/2 mx-auto flex justify-center block w-full bg-white border border-gray-300 rounded-md h-12 px-3 sm:text-sm placeholder-gray-400 focus:outline-none"%>
  </div>

  <div class="mt-8">
    <%= f.submit "登録する", class: "w-full md:w-2/3 lg:w-1/2 mx-auto flex justify-center h-12 px-4 rounded-md shadow-sm text-sm font-medium text-white bg-gray-800 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-800"%>
  </div>
  <% end %>

  <div class= "text-center mt-6">
    <%= link_to "ログインはこちら", new_user_session_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>

