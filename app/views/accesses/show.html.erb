<% can_open = !@password_required || @authorized %>

<div
  data-controller="lottie-envelope"
  data-lottie-envelope-path-value="/lotties/envelope_open.json"
  class="relative flex flex-col items-center justify-center min-h-[60vh]"
>
  <div class="mb-6 text-center">
    <p class = "text-xl sm:text-2xl font-semibold text-stone-700">
      <%= @letter.sender_name %>さんから手紙が届きました！
    </p>
    <p class="mt-1 text-sm text-stone-500">
      封筒を開いてください
    </p>
  </div>
  <div
    data-lottie-envelope-target="container"
    class="w-[320px] aspect-square overflow-hidden"
  ></div>
  <% if @password_required && !@authorized %>
    <div class="mt-6 w-full max-w-sm bg-white rounded-xl border border-stone-200 p-4">
      <p class="text-sm font-semibold text-stone-700">
        この手紙にはパスワードが設定されています
      </p>
      <p class="mt-1 text-xs text-stone-500">
        閲覧するにはパスワードの入力が必要です。
      </p>

      <%= form_with url: verify_public_letter_path(@letter.view_token), method: :post, class: "mt-3 space-y-3" do %>
        <%= password_field_tag :view_password, nil,
        class: "w-full h-11 rounded-lg border-stone-300 focus:border-stone-500 focus:ring-stone-500 border border-gray-300",
            placeholder: " パスワード" %>
        <%= submit_tag "認証する",
            class: "w-full h-11 rounded-lg bg-gray-700 text-white hover:bg-gray-800 " %>
      <% end %>
    </div>
  <% end %>
  <button
    data-lottie-envelope-target="button"
    data-action="click->lottie-envelope#open"
    class="mt-6 h-12 px-10 rounded-full bg-stone-700 text-white <%= can_open ? '' : 'hidden' %>"
    <%= can_open ? '' : 'disabled' %>
  >
    封筒を開く
  </button>

    <!-- モーダル -->
  <div
    data-lottie-envelope-target="modal"
    class="fixed inset-0 z-50 flex items-center justify-center
          opacity-0 pointer-events-none
          transition-opacity duration-300 ease-out"
    aria-hidden="true"
  >
    <!-- 背景 -->
    <div
      class="absolute inset-0 bg-black/40"
      data-action="click->lottie-envelope#close"
    ></div>
    
    <!-- カード本体 -->
    <div
      data-lottie-envelope-target="modalCard"
      class="relative
            bg-white rounded-2xl shadow-xl
            overflow-hidden
            transform scale-95 opacity-0
            transition-all duration-300 ease-out"
    >
      <!-- ヘッダー -->
      <div class="flex items-center justify-between px-4 py-3 border-b border-stone-200">
        <p class="text-sm font-semibold text-stone-700"><%= @template.kind_label %></p>
        <button
          type="button"
          class="text-sm text-stone-500 hover:text-stone-700"
          data-action="click->lottie-envelope#close"
        >
          閉じる
        </button>
      </div>

      <!-- 本文 -->
      <div class="p-4 overflow-auto">
        <!-- スマホ用 -->
        <div class="block md:hidden">
          <%= render "letters/show_preview_canvas", display_width: 340 %>
        </div>

        <!-- PC用 -->
        <div class="hidden md:block">
          <%= render "letters/show_preview_canvas", display_width: 560 %>
        </div>
      </div>
    </div>
  </div>
</div>
